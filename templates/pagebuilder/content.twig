<section id="section{{ sectionno }}" class="mod-content {{ item.achtergrond }}"  data-scroll-section>
	<div class="container anime-fadein">
		<div class="row">
			<div class="col-md-6 col-lg-5 offset-lg-1">
				{% if item.titel %}
					<h2> {{ item.titel }} </h2>
				{% endif %}
				{% if item.link %}
					<a class="btn btn-primary d-none d-md-inline-block" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
				{% endif %}
			</div>
			<div class="col-md-6 col-lg-5">
				{% if item.lead %}
					<div class="lead">
						{{ item.lead }}
					</div>
				{% endif %}
				{% if item.tekst %}
					{{ item.tekst }}
				{% endif %}
				{% if item.link %}
					<br>
					<a class="btn btn-primary d-md-none" href="{{ item.link.url }}" target="{{ item.link.target }}">{{ item.link.title }}</a>
				{% endif %}
			</div>
		</div>
    </div>
</section>