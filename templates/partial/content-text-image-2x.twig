<section class="mod-content single-content content-text-image-2x" data-scroll-section>
	<div class="container">
		<div class="row">		
			<div class="col-md-6 d-flex flex-column align-items-start">
				<div class="image image1 ratio-4x3 w-100 mb-4 anime-reveal">
					<div class="bg-cover" style="background-image: url({{ Image(item.afbeelding)|resize(1024) }})"></div>
				</div>
				<div class="text anime-fadein mt-auto">
					{% if item.titel %}
						<h2 class="h5 line-bottom"> {{ item.titel }} </h2>
					{% endif %}
					{% if item.tekst %}
						{{ item.tekst }}
					{% endif %}
				</div>
			</div>
			<div class="col-md-6 order-first order-md-last">
				<div class="image image2 ratio-3x4 w-100 anime-reveal mb-4 mb-md-0">
					<div class="bg-cover" style="background-image: url({{ Image(item.afbeelding2)|resize(1024) }})"></div>
				</div>
			</div>
		</div>
	</div>
</section>