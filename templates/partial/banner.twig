<section class="mod-banner d-flex align-items-center text-white" data-scroll-section>
	<div class="fill-space" data-scroll data-scroll-speed="-3">
		<div class="bg-cover" style="background-image: url({{ Image(post.afbeelding).src|resize(1920) }})">
		</div>
	</div>
	<div class="container" data-scroll data-scroll-speed="-1">
		<div class="row">
			<div class="col-10 offset-1 offset-lg-2 col-lg-8 text-center">
				<h2 class="h1 ml10 altfont weight-400">
					<div class="line">
						<span class="text-wrapper">
							<span class="letters"> 
								{% if post.titel %}
									{{ post.titel }} 
								{% else %}
									{{ post.title }} 
								{% endif %}
							</span>
						</span>
					</div>
				</h2>
				<div class="d-none d-lg-block">
					{% if post.tekst %}
						<h4> {{ post.tekst }} </h4>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
</section> 